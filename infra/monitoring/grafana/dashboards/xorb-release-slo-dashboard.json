    {
      "title": "Release SLO Burn-Down Overview",
      "type": "stat",
      "targets": [
        {
          "expr": "(\n  (1 - (\n    sum(rate(http_requests_total{job=\"xorb-api\", code!~\"5..\"}[30d])) /\n    sum(rate(http_requests_total{job=\"xorb-api\"}[30d]))\n  )) * 100\n) / 0.1",
          "format": "time_series",
          "legendFormat": "API Availability Burn Rate"
        },
        {
          "expr": "(\n  histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"xorb-api\"}[30d])) by (le)) / 2.0\n) * 100",
          "legendFormat": "API Latency Burn Rate"
        },
        {
          "expr": "(\n  1 - (\n    sum(rate(evidence_verification_success_total[30d])) /\n    sum(rate(evidence_verification_total[30d]))\n  )\n) * 10000",
          "legendFormat": "Evidence System Burn Rate"
        },
        {
          "expr": "(\n  sum(tenant_isolation_violation_total) * 1000\n)",
          "legendFormat": "Tenant Isolation Burn Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 50
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          },
          "unit": "percent"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
