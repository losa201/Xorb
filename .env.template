# XORB Platform Environment Configuration Template
# Copy this file to .env and fill in appropriate values for your environment

# Environment (development, staging, production, test)
XORB_ENV=development

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=xorb_dev
DATABASE_USERNAME=xorb_dev
DATABASE_PASSWORD=change_me_in_production

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_me_in_production

# Security Configuration
JWT_SECRET=change_me_in_production_very_long_secret_key_here
ENCRYPTION_KEY=change_me_in_production_32_char_key

# Service Configuration
API_HOST=0.0.0.0
API_PORT=8000
ORCHESTRATOR_PORT=8001
INTELLIGENCE_PORT=8002

# External Services
TEMPORAL_HOST=localhost:7233
VAULT_URL=http://localhost:8200
VAULT_TOKEN=change_me_in_production

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
LOG_LEVEL=INFO

# Feature Flags
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_THREAT_HUNTING=true
ENABLE_COMPLIANCE_AUTOMATION=true
ENABLE_MULTI_TENANT=false
ENABLE_SSO_INTEGRATION=false

# CORS Configuration (comma-separated)
CORS_ORIGINS=*

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/xorb.crt
SSL_KEY_PATH=/etc/ssl/private/xorb.key

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Cloud Provider (aws, azure, gcp, none)
CLOUD_PROVIDER=none

# Deployment Scaling
API_REPLICAS=1
ORCHESTRATOR_REPLICAS=1
INTELLIGENCE_REPLICAS=1
