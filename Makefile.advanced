	@echo "âœ… Advanced setup complete"

deps: ## Install/update dependencies
	@echo "ğŸ“¦ Installing advanced dependencies..."
	@source venv/bin/activate && pip install -r requirements.txt
	@source venv/bin/activate && pip install prometheus-client structlog cryptography psutil
	@echo "âœ… Advanced dependencies installed"

dev: deps ## Complete dev setup and start services
	@echo "ğŸš€ Starting advanced development environment..."
