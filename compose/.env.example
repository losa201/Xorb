# Xorb PTaaS Environment Configuration
# Copy to .env and fill in your values

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_chars

# AI Provider API Keys
OPENAI_API_KEY=sk-your_openai_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# USDC/Crypto (optional)
USDC_CONTRACT_ADDRESS=0xa0b86a33e6776cfdc1b0e1c46d4d5bef08c7b5b7
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_project_id

# External Services
NUCLEI_API_KEY=your_nuclei_api_key_if_needed
ZAP_API_KEY=your_zap_api_key_if_needed

# Security Settings
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Logging
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# Performance Tuning
WORKER_CONCURRENCY=4
API_WORKERS=3
EPYC_OPTIMIZATION=true

# Development Settings (set to false in production)
DEBUG=false
RELOAD=false