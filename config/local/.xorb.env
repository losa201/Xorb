# XORB Local Deployment Configuration
# Generated for workstation deployment

# Deployment metadata
DEPLOYMENT_ID=xorb_local_fixed
XORB_VERSION=2.0.0
DEPLOYMENT_TYPE=local
DEVICE_TYPE=workstation
OPTIMIZATION_PROFILE=workstation_optimized

# Hardware configuration
ARCH=amd64
CPU_CORES=16
MEMORY_GB=30

# Service configuration
XORB_API_PORT=8000
XORB_ORCHESTRATOR_PORT=8080
XORB_WORKER_PORT=9090
XORB_METRICS_PORT=9091
GRAFANA_PORT=3000
PROMETHEUS_PORT=9091

# Database configuration
POSTGRES_PORT=5432
POSTGRES_PASSWORD=xorb_secure_pass
REDIS_PORT=6379
NEO4J_PORT=7474
NEO4J_PASSWORD=xorb_graph_pass
QDRANT_PORT=6333

# Security configuration
ENABLE_TLS=true
ENABLE_AUTHENTICATION=true
LOG_LEVEL=INFO
AUDIT_ENABLED=true

# Performance tuning based on device type
MAX_CONCURRENT_AGENTS=8
ORCHESTRATOR_WORKERS=4
CACHE_SIZE_MB=1024
LOG_ROTATION_SIZE=50M
ENABLE_COMPRESSION=true

# Resource Limits
MEMORY_LIMIT_API=2g
MEMORY_LIMIT_WORKER=1g
MEMORY_LIMIT_ORCHESTRATOR=1g
MEMORY_LIMIT_DB=2g
MEMORY_LIMIT_CACHE=512m
MEMORY_LIMIT_GRAPH=1g
MEMORY_LIMIT_VECTOR=512m
MEMORY_LIMIT_MONITORING=512m
MEMORY_LIMIT_DASHBOARD=256m

CPU_LIMIT_API=4.0
CPU_LIMIT_WORKER=2.0
CPU_LIMIT_ORCHESTRATOR=2.0
CPU_LIMIT_DB=1.0

# Grafana configuration
GRAFANA_PASSWORD=xorb_admin