# XORB Production Environment Configuration
XORB_ENV=production
XORB_DEBUG=false

# EPYC Optimization
XORB_MAX_AGENTS=32
XORB_WORKER_CONCURRENCY=16
XORB_AGENT_TIMEOUT=1800
XORB_NUMA_OPTIMIZATION=true
XORB_CPU_AFFINITY=true

# Resource Limits (EPYC 7702 64-core)
XORB_MEMORY_LIMIT=32Gi
XORB_CPU_LIMIT=64
XORB_DISK_LIMIT=500Gi

# Database Configuration
POSTGRES_DSN=postgresql://xorb_user:${POSTGRES_PASSWORD}@postgres:5432/xorb_prod
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=xorb_user
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_DB=xorb_prod
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0
REDIS_MAXMEMORY=8gb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# Temporal Configuration
TEMPORAL_HOST=temporal:7233
TEMPORAL_NAMESPACE=xorb-production
TASK_QUEUE=xorb-production-queue

# Security
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ALGORITHM=RS256
JWT_EXPIRATION_HOURS=8
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# TLS Configuration
TLS_ENABLED=true
TLS_CERT_PATH=/app/certs/cert.pem
TLS_KEY_PATH=/app/certs/key.pem
TLS_CA_PATH=/app/certs/ca.pem

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=8
API_DEBUG=false
API_RATE_LIMIT=1000

# Worker Configuration
WORKER_HOST=0.0.0.0
WORKER_PORT=9000
WORKER_CONCURRENCY=16
WORKER_HEARTBEAT_INTERVAL=30

# Orchestrator Configuration
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_PORT=8001
ORCHESTRATOR_TIMEOUT=3600

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_HOST=prometheus
PROMETHEUS_PORT=9090
GRAFANA_HOST=grafana
GRAFANA_PORT=3000
ALERTMANAGER_HOST=alertmanager
ALERTMANAGER_PORT=9093

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/xorb.log
LOG_RETENTION_DAYS=30
AUDIT_LOG_ENABLED=true

# LLM Configuration
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
NVIDIA_API_KEY=${NVIDIA_API_KEY}
NVIDIA_BASE_URL=https://integrate.api.nvidia.com/v1
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3

# Knowledge Fabric
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=${QDRANT_API_KEY}
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=${NEO4J_PASSWORD}

# NATS Configuration
NATS_URL=nats://nats:4222
NATS_CLUSTER_ID=xorb-cluster
NATS_CLIENT_ID=xorb-production

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90
BACKUP_STORAGE_TYPE=s3
BACKUP_S3_BUCKET=${BACKUP_S3_BUCKET}
BACKUP_S3_REGION=${BACKUP_S3_REGION}

# High Availability
HA_ENABLED=true
HA_REPLICA_COUNT=3
HA_LEADER_ELECTION=true

# Performance Tuning
CACHE_TTL=3600
BATCH_SIZE=1000
CONNECTION_POOL_SIZE=50
QUERY_TIMEOUT=30

# Security Hardening
SECURITY_SCANNING=true
VULNERABILITY_SCANNING=true
AUDIT_ENABLED=true
RBAC_ENABLED=true

# Compliance
SOC2_COMPLIANCE=true
GDPR_COMPLIANCE=true
HIPAA_COMPLIANCE=false

# Production Features
HOT_RELOAD=false
AUTO_MIGRATION=false
MOCK_EXTERNAL_SERVICES=false
HEALTH_CHECK_INTERVAL=30
GRACEFUL_SHUTDOWN_TIMEOUT=30