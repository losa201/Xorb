# XORB Platform Environment Configuration Template
# Copy this file to .env and update with your specific values

# === REQUIRED SECURITY SETTINGS ===
# Generate a secure JWT secret with: openssl rand -base64 64
# MUST be at least 32 characters, 64+ recommended for production
JWT_SECRET=your-secure-jwt-secret-must-be-at-least-32-characters-long

# === APPLICATION SETTINGS ===
ENVIRONMENT=development
APP_NAME=XORB Enterprise Cybersecurity Platform
APP_VERSION=3.0.0
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# === DATABASE CONFIGURATION ===
# Use strong database credentials in production
DATABASE_URL=postgresql://xorb_user:your-secure-db-password@localhost:5432/xorb_db

# === REDIS CONFIGURATION ===
REDIS_URL=redis://:your-secure-redis-password@localhost:6379/0

# === CORS SECURITY ===
# Development: Use specific localhost origins (preferred) or "*" for quick setup
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:8080
# Production: Only HTTPS origins allowed, no wildcards
# CORS_ALLOW_ORIGINS=https://app.yourdomain.com,https://api.yourdomain.com

CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
# Security: Specific headers recommended over wildcards in production
CORS_ALLOW_HEADERS=Accept,Authorization,Content-Type,X-CSRF-Token,X-Requested-With
CORS_ALLOW_CREDENTIALS=true

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# === EXTERNAL API KEYS (Optional) ===
# Required only if AI features are enabled
NVIDIA_API_KEY=your-nvidia-api-key
OPENROUTER_API_KEY=your-openrouter-api-key
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# === TEMPORAL WORKFLOW ENGINE ===
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default

# === SECURITY TOOLS PATHS ===
NMAP_PATH=/usr/bin/nmap
NUCLEI_PATH=/usr/bin/nuclei
NIKTO_PATH=/usr/bin/nikto

# === FEATURE FLAGS ===
ENABLE_ENTERPRISE_FEATURES=true
ENABLE_AI_FEATURES=true
ENABLE_COMPLIANCE_FEATURES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_DEBUG_ENDPOINTS=false

# === MONITORING ===
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
LOG_FORMAT=json

# === SECURITY POLICY ===
MIN_PASSWORD_LENGTH=12
REQUIRE_MFA=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
JWT_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=7

# === PTAAS SETTINGS ===
PTAAS_MAX_CONCURRENT_SCANS=10
PTAAS_SCAN_TIMEOUT_MINUTES=60
PTAAS_RESULT_RETENTION_DAYS=90

# === FILE UPLOAD SECURITY ===
MAX_FILE_UPLOAD_SIZE_MB=100
ALLOWED_FILE_EXTENSIONS=.pdf,.txt,.json,.xml,.csv

# === PRODUCTION DEPLOYMENT NOTES ===
# 1. Generate JWT_SECRET with: openssl rand -base64 64
# 2. Use strong database passwords with special characters
# 3. Set CORS_ALLOW_ORIGINS to specific domains only
# 4. Set ENVIRONMENT=production
# 5. Set DEBUG=false
# 6. Set ENABLE_DEBUG_ENDPOINTS=false
# 7. Use secure Redis password
# 8. Review and adjust rate limiting for your use case