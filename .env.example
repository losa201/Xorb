# XORB PTaaS Platform - Environment Configuration Template
# Copy this file to .env and configure with your specific values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=postgresql://xorb:password@localhost:5432/xorb
POSTGRES_DB=xorb
POSTGRES_USER=xorb
POSTGRES_PASSWORD=secure_password

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ==========================================
# TEMPORAL WORKFLOW ENGINE
# ==========================================
TEMPORAL_HOST=temporal:7233

# ==========================================
# AUTHENTICATION & SECURITY
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# API Keys (generate secure random keys for production)
XORB_API_KEY=
NVIDIA_API_KEY=
OPENROUTER_API_KEY=

# ==========================================
# SSO CONFIGURATION
# ==========================================
# Azure Active Directory
AZURE_SSO_ENABLED=false
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT=common

# Google OAuth
GOOGLE_SSO_ENABLED=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Okta
OKTA_SSO_ENABLED=false
OKTA_CLIENT_ID=
OKTA_CLIENT_SECRET=
OKTA_DOMAIN=

# GitHub
GITHUB_SSO_ENABLED=false
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ==========================================
# APPLICATION SETTINGS
# ==========================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false
APP_NAME=XORB PTaaS
APP_VERSION=1.0.0

# ==========================================
# CORS & SECURITY
# ==========================================
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_MFA=false

# ==========================================
# SERVICE URLS
# ==========================================
SCANNER_SERVICE_URL=http://localhost:8001
COMPLIANCE_SERVICE_URL=http://localhost:8002
NOTIFICATION_SERVICE_URL=http://localhost:8003

# ==========================================
# EMAIL/SMTP CONFIGURATION
# ==========================================
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_TLS=true
EMAIL_FROM=noreply@xorb.security

# ==========================================
# AI/ML CONFIGURATION
# ==========================================
# LLM Integration
LLM_PREFER_PAID=true
LLM_ENABLE_FALLBACK=true
LLM_DAILY_BUDGET=25.0
LLM_MONTHLY_BUDGET=500.0
LLM_REQUEST_LIMIT=5.0
LLM_DAILY_REQUEST_LIMIT=100
LLM_MONTHLY_REQUEST_LIMIT=2000
LLM_HOURLY_REQUEST_LIMIT=20

# NVIDIA API Configuration
NVIDIA_BASE_URL=https://integrate.api.nvidia.com/v1

# AMD EPYC Optimization
EPYC_OPTIMIZATION=true
AI_ENHANCED=true

# ==========================================
# MONITORING & OBSERVABILITY
# ==========================================
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ==========================================
# THREAT INTELLIGENCE
# ==========================================
# External threat intelligence sources (leave empty for security)
MISP_URL=
MISP_API_KEY=
VIRUSTOTAL_API_KEY=
OTX_API_KEY=
THREAT_INTEL_UPDATE_INTERVAL=3600

# ==========================================
# DEVELOPMENT/TESTING
# ==========================================
# Test database (separate from main database)
TEST_DATABASE_URL=postgresql://xorb:password@localhost:5432/xorb_test

# Enable development features
DEV_MODE=false
ENABLE_DEBUG_ROUTES=false
MOCK_EXTERNAL_SERVICES=false

# ==========================================
# DOCKER/DEPLOYMENT
# ==========================================
# Container resource limits
CONTAINER_MEMORY_LIMIT=2G
CONTAINER_CPU_LIMIT=2.0
CONTAINER_CPU_RESERVATION=0.5
CONTAINER_MEMORY_RESERVATION=512M

# Network configuration
DOCKER_NETWORK_SUBNET=172.20.0.0/16

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_GAMIFICATION=true
ENABLE_COMPLIANCE_AUTOMATION=true
ENABLE_ADVANCED_SCANNING=true
ENABLE_THREAT_HUNTING=true
ENABLE_INCIDENT_RESPONSE=true

# ==========================================
# EXTERNAL INTEGRATIONS
# ==========================================
# SIEM Integration
SPLUNK_HOST=
SPLUNK_TOKEN=
ELK_HOST=
QRADAR_HOST=

# Ticketing System
JIRA_URL=
JIRA_USERNAME=
JIRA_API_TOKEN=
SERVICENOW_URL=
SERVICENOW_USERNAME=
SERVICENOW_PASSWORD=

# Cloud Provider APIs
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AZURE_SUBSCRIPTION_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
GCP_PROJECT_ID=
GCP_SERVICE_ACCOUNT_KEY=

# ==========================================
# SECURITY SCANNING
# ==========================================
NESSUS_URL=
NESSUS_ACCESS_KEY=
NESSUS_SECRET_KEY=
OPENVAS_HOST=
QUALYS_USERNAME=
QUALYS_PASSWORD=
RAPID7_API_KEY=

# ==========================================
# NOTIFICATION CHANNELS
# ==========================================
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ==========================================
# BACKUP & RECOVERY
# ==========================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=
S3_BACKUP_ACCESS_KEY=
S3_BACKUP_SECRET_KEY=

# Worker/Task Queue
TASK_QUEUE=xorb-task-queue
