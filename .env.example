# Xorb 2.0 Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
XORB_ENVIRONMENT=development

# Logging configuration
XORB_LOG_LEVEL=INFO
XORB_DEBUG=false

# Service binding
XORB_API_HOST=0.0.0.0
XORB_API_PORT=8000
XORB_WORKER_PORT=9090
XORB_ORCHESTRATOR_PORT=8080

# =============================================================================
# DATABASE CONNECTIONS
# =============================================================================

# PostgreSQL with PGVector
DATABASE_URL=postgresql://xorb_user:your_password@localhost:5432/xorb
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# Redis for caching and session storage
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_POOL_SIZE=20

# =============================================================================
# MESSAGE BROKERS & STREAMING
# =============================================================================

# NATS JetStream for event streaming
NATS_URL=nats://localhost:4222
NATS_USER=
NATS_PASSWORD=
NATS_CLUSTER_NAME=xorb-cluster

# Temporal for workflow orchestration
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=xorb
TEMPORAL_TASK_QUEUE=xorb-tasks

# =============================================================================
# AI & VECTOR DATABASES
# =============================================================================

# Qdrant for vector storage
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=xorb-vectors

# Neo4j for knowledge graphs
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password
NEO4J_DATABASE=xorb

# =============================================================================
# EXTERNAL API INTEGRATIONS
# =============================================================================

# OpenRouter for LLM access
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=anthropic/claude-3-sonnet

# HackerOne API
HACKERONE_API_KEY=your_hackerone_api_key
HACKERONE_USERNAME=your_hackerone_username
HACKERONE_BASE_URL=https://api.hackerone.com

# Additional LLM APIs (fallback)
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# API Keys for internal services
XORB_INTERNAL_API_KEY=your-internal-api-key

# TLS/SSL Configuration
TLS_CERT_PATH=/certs/tls.crt
TLS_KEY_PATH=/certs/tls.key
TLS_CA_PATH=/certs/ca.crt

# =============================================================================
# AGENT & ORCHESTRATION CONFIGURATION
# =============================================================================

# Agent execution limits
MAX_CONCURRENT_AGENTS=16
MAX_CONCURRENT_CAMPAIGNS=5
AGENT_POOL_SIZE=32
WORKER_CONCURRENCY=8

# Agent discovery
AGENT_DISCOVERY_PATHS=./agents,./plugins
AGENT_DISCOVERY_INTERVAL=300

# Campaign configuration
CAMPAIGN_DEFAULT_TIMEOUT=3600
CAMPAIGN_MAX_RETRIES=3
CAMPAIGN_CLEANUP_INTERVAL=1800

# Resource limits
AGENT_MEMORY_LIMIT=2Gi
AGENT_CPU_LIMIT=2
AGENT_TIMEOUT=600

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_PATH=/metrics

# Grafana (if self-hosted)
GRAFANA_URL=http://localhost:3001
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=your_grafana_password

# Jaeger tracing
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
JAEGER_SERVICE_NAME=xorb

# Sentry error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# =============================================================================
# CLOUD & INFRASTRUCTURE
# =============================================================================

# Kubernetes configuration (if applicable)
KUBERNETES_NAMESPACE=xorb-dev
KUBERNETES_SERVICE_ACCOUNT=xorb-sa
KUBECONFIG=/path/to/kubeconfig

# AWS (if using cloud resources)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=xorb-artifacts

# Container registry
CONTAINER_REGISTRY=registry.xorb.ai
CONTAINER_REGISTRY_USERNAME=
CONTAINER_REGISTRY_PASSWORD=

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Feature flags
FEATURE_AGENT_DISCOVERY=true
FEATURE_CONCURRENT_EXECUTION=true
FEATURE_ML_RECOMMENDATIONS=false
FEATURE_ADVANCED_MONITORING=true

# Testing configuration
TEST_DATABASE_URL=postgresql://xorb_test:test_password@localhost:5432/xorb_test
TEST_REDIS_URL=redis://localhost:6379/1
PYTEST_WORKERS=4

# Development tools
DEVELOPMENT_MODE=true
HOT_RELOAD=true
DEBUG_TOOLBAR=false

# =============================================================================
# COMPLIANCE & RULES OF ENGAGEMENT
# =============================================================================

# Rules of Engagement
ROE_VALIDATION_ENABLED=true
ROE_STRICT_MODE=true
ROE_ALLOWED_DOMAINS=example.com,test.com
ROE_BLOCKED_DOMAINS=facebook.com,google.com
ROE_RATE_LIMIT_REQUESTS=100
ROE_RATE_LIMIT_WINDOW=60

# Audit logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=INFO
AUDIT_LOG_RETENTION_DAYS=90

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Connection pooling
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
REDIS_POOL_SIZE=20

# Async configuration
ASYNCIO_LOOP_POLICY=uvloop
ASYNC_TIMEOUT=30

# Memory management
MEMORY_LIMIT=2Gi
MEMORY_REQUEST=1Gi

# CPU configuration
CPU_LIMIT=2
CPU_REQUEST=500m

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup configuration
BACKUP_ENABLED=false
BACKUP_S3_BUCKET=xorb-backups
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Add your custom environment variables here
# CUSTOM_FEATURE_FLAG=true
# CUSTOM_API_ENDPOINT=https://api.example.com
# CUSTOM_WEBHOOK_URL=https://webhook.example.com/xorb