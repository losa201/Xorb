# XORB Supreme Enhanced Configuration Template
# Copy to .env and fill in your API keys

# =============================================================================
# LLM API CONFIGURATION
# =============================================================================

# OpenAI API (for GPT-4, GPT-4 Turbo)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_org_id_optional

# OpenRouter API (for Claude, GPT-4, Gemini via single API)
OPENROUTER_API_KEY=sk-or-v1-your_openrouter_key_here
OPENROUTER_APP_NAME=XORB-Supreme
OPENROUTER_APP_URL=https://xorb-supreme.ai

# Anthropic Claude Direct API
CLAUDE_API_KEY=your_claude_api_key_here

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# BUDGET & COST CONTROLS
# =============================================================================

# Daily spending limits (USD)
DAILY_BUDGET_LIMIT=25.00
MONTHLY_BUDGET_LIMIT=200.00
PER_REQUEST_LIMIT=5.00

# Cost monitoring alerts
COST_ALERT_THRESHOLD=50.00
BUDGET_WARNING_PERCENTAGE=80

# =============================================================================
# DATABASE & STORAGE
# =============================================================================

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=optional_password
REDIS_DB=0

# SQLite Database
DATABASE_URL=sqlite:///xorb_knowledge.db

# Knowledge Fabric Settings
KNOWLEDGE_RETENTION_DAYS=365
CACHE_TTL_HOURS=24

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# API Security
API_RATE_LIMIT_PER_MINUTE=60
API_KEY_ROTATION_DAYS=90

# Encryption Keys (generate with: python -c "import secrets; print(secrets.token_hex(32))")
ENCRYPTION_KEY=your_32_byte_hex_key_here
SESSION_SECRET=your_session_secret_here

# =============================================================================
# SCRAPING & TARGET CONFIGURATION
# =============================================================================

# HackerOne Settings
HACKERONE_USER_AGENT=Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36
HACKERONE_RATE_LIMIT_DELAY=2
HACKERONE_MAX_PROGRAMS=50

# Target Validation
ALLOWED_DOMAINS=example.com,test.local,authorized-target.com
SCOPE_VALIDATION_ENABLED=true

# =============================================================================
# REPORTING & OUTPUT
# =============================================================================

# Report Generation
DEFAULT_REPORT_FORMAT=markdown
ENABLE_PDF_EXPORT=true
REPORT_RETENTION_DAYS=180

# Professional Reporting
COMPANY_NAME=Your Security Company
ASSESSOR_NAME=Your Name
ASSESSOR_CREDENTIALS=CISSP, CEH, OSCP

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================

# Concurrency Limits
MAX_CONCURRENT_REQUESTS=5
MAX_CONCURRENT_TARGETS=3
WORKER_THREAD_COUNT=4

# Caching
ENABLE_REQUEST_CACHING=true
CACHE_SIZE_MB=100

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log Levels (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/xorb_supreme.log
LOG_ROTATION_SIZE_MB=10

# Performance Monitoring
ENABLE_METRICS=true
METRICS_EXPORT_INTERVAL=300

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development Mode
DEBUG_MODE=false
ENABLE_TEST_MODE=false

# Fallback Settings
ENABLE_FREE_TIER_FALLBACK=true
FALLBACK_MODEL=qwen/qwen3-235b-a22b-07-25:free

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================

# Compliance Frameworks
DEFAULT_COMPLIANCE_FRAMEWORKS=PCI-DSS,GDPR,SOX
ENABLE_COMPLIANCE_CHECKS=true

# Legal & Ethical
REQUIRE_AUTHORIZATION_CONFIRMATION=true
ENABLE_RESPONSIBLE_DISCLOSURE=true
MAX_VULNERABILITY_SEVERITY=critical

# =============================================================================
# NOTIFICATION & ALERTING
# =============================================================================

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_ADDRESS=xorb@yourcompany.com

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#security-alerts

# =============================================================================
# ADVANCED FEATURES
# =============================================================================

# AI Enhancement Settings
CREATIVITY_LEVEL=0.8
ENABLE_POLYGLOT_PAYLOADS=true
ENABLE_CHAINED_EXPLOITATION=true

# Business Logic Analysis
ENABLE_BUSINESS_LOGIC_ANALYSIS=true
INDUSTRY_CONTEXT_DETECTION=true

# Professional Features
ENABLE_EXECUTIVE_REPORTS=true
ENABLE_COMPLIANCE_REPORTS=true
AUTO_GENERATE_BUG_BOUNTY_REPORTS=true

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# External Tool Integration
BURP_SUITE_API_URL=http://localhost:1337
NUCLEI_TEMPLATES_PATH=/opt/nuclei-templates
NMAP_BINARY_PATH=/usr/bin/nmap

# Cloud Provider Integration
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================

# Backup Settings
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/opt/xorb_backups

# =============================================================================
# CUSTOM EXTENSIONS
# =============================================================================

# Plugin System
ENABLE_PLUGINS=true
PLUGIN_DIRECTORY=plugins/
CUSTOM_PAYLOAD_MODULES=modules/payloads/

# Custom Model Integration
CUSTOM_LLM_ENDPOINT=http://localhost:8000/v1/completions
CUSTOM_MODEL_API_KEY=your_custom_key