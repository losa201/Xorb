# XORB Platform Environment Configuration Template
# Copy to .env and configure with secure values

# ==============================================================================
# SECURITY NOTICE: Never commit .env files to version control
# This template provides structure only - all secrets must be generated
# ==============================================================================

# Application Settings
APP_NAME="XORB Enterprise Cybersecurity Platform"
APP_VERSION="3.1.0"
ENVIRONMENT="development"
DEBUG=false

# ==============================================================================
# SECURITY CONFIGURATION (REQUIRED - Generate secure values)
# ==============================================================================

# JWT Configuration
# Generate with: openssl rand -hex 32
JWT_SECRET="REPLACE_WITH_SECURE_32_CHAR_SECRET"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_MINUTES=15
JWT_REFRESH_EXPIRATION_DAYS=7

# Database Configuration
# Use strong passwords: openssl rand -base64 32
DATABASE_URL="postgresql://xorb_user:SECURE_PASSWORD@localhost:5432/xorb_enterprise"
DB_MIN_POOL_SIZE=5
DB_MAX_POOL_SIZE=20

# Redis Configuration
# Use strong passwords: openssl rand -base64 32
REDIS_URL="redis://:SECURE_REDIS_PASSWORD@localhost:6379/0"
REDIS_MAX_CONNECTIONS=20

# ==============================================================================
# API CONFIGURATION
# ==============================================================================
API_PREFIX="/api/v1"
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=1

# ==============================================================================
# SECURITY SETTINGS (Hardened defaults)
# ==============================================================================

# Password Policy
MIN_PASSWORD_LENGTH=12
REQUIRE_MFA=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Rate Limiting (Conservative defaults)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500
RATE_LIMIT_PER_DAY=5000

# CORS Configuration (Secure defaults)
CORS_ALLOW_ORIGINS="http://localhost:3000"
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Trusted Hosts (Secure defaults)
ALLOWED_HOSTS="localhost,127.0.0.1"

# ==============================================================================
# EXTERNAL API KEYS (Configure as needed)
# ==============================================================================
NVIDIA_API_KEY=""
OPENROUTER_API_KEY=""
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""

# ==============================================================================
# PTAAS CONFIGURATION
# ==============================================================================
PTAAS_MAX_CONCURRENT_SCANS=5
PTAAS_SCAN_TIMEOUT_MINUTES=30
PTAAS_RESULT_RETENTION_DAYS=90

# Security Tool Paths (Configure if needed)
NMAP_PATH="/usr/bin/nmap"
NUCLEI_PATH="/usr/bin/nuclei"
NIKTO_PATH="/usr/bin/nikto"

# ==============================================================================
# FEATURE FLAGS (Secure defaults)
# ==============================================================================
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_ENTERPRISE_FEATURES=true
ENABLE_AI_FEATURES=true
ENABLE_COMPLIANCE_FEATURES=true

# ==============================================================================
# MONITORING CONFIGURATION
# ==============================================================================
ENABLE_METRICS=true
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# ==============================================================================
# VAULT INTEGRATION (Recommended for production)
# ==============================================================================
VAULT_URL="http://localhost:8200"
VAULT_TOKEN=""
ENCRYPTION_SALT=""