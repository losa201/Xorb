# XORB PTaaS Platform Environment Configuration
# Domain: ptaas.verteidiq.com
# Production Deployment Settings

# Environment
ENV=production
DEBUG=false
DOMAIN=ptaas.verteidiq.com
PTAAS_ENABLED=true

# Database Configuration
POSTGRES_PASSWORD=xorb_secure_2024_ptaas_prod
NEO4J_PASSWORD=xorb_graph_2024_ptaas_prod
REDIS_PASSWORD=xorb_redis_2024_ptaas_prod

# Security Configuration
SECRET_KEY=ptaas_verteidiq_secret_key_2024_ultra_secure_random_string
JWT_SECRET=ptaas_verteidiq_jwt_secret_2024_secure_random_key_ultra_long
ENCRYPTION_KEY=ptaas_verteidiq_encryption_2024_secure_key

# API Keys (Set these with your actual API keys)
OPENROUTER_API_KEY=your_openrouter_api_key_here
NVIDIA_API_KEY=your_nvidia_api_key_here
QWEN_API_KEY=your_qwen_api_key_here
CEREBRAS_API_KEY=your_cerebras_api_key_here

# Monitoring Configuration
GRAFANA_PASSWORD=ptaas_grafana_admin_2024_secure

# Domain-specific Configuration
CORS_ORIGINS=https://ptaas.verteidiq.com,https://admin.ptaas.verteidiq.com,https://www.ptaas.verteidiq.com
ALLOWED_HOSTS=ptaas.verteidiq.com,admin.ptaas.verteidiq.com,www.ptaas.verteidiq.com

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/verteidiq.com.crt
SSL_KEY_PATH=/etc/ssl/private/verteidiq.com.key

# Compliance Configuration
COMPLIANCE_MODE=german
LEGAL_FRAMEWORK=IT-SiG,DSGVO,BSI
AUDIT_LOGGING=enabled

# Performance Configuration
WORKER_CONCURRENCY=32
MAX_CONCURRENT_ACTIVITIES=64
EPYC_OPTIMIZATION=true
NUMA_AWARENESS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
ACCESS_LOG_ENABLED=true
AUDIT_LOG_ENABLED=true

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Security Headers Configuration
SECURITY_HEADERS_ENABLED=true
HSTS_ENABLED=true
CSP_ENABLED=true
XSS_PROTECTION_ENABLED=true

# Data Retention Configuration
DATA_RETENTION_DAYS=365
LOG_RETENTION_DAYS=90
BACKUP_RETENTION_DAYS=30

# Notification Configuration
EMAIL_NOTIFICATIONS_ENABLED=true
SLACK_NOTIFICATIONS_ENABLED=false
WEBHOOK_NOTIFICATIONS_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_ENCRYPTION=true

# Monitoring and Alerting
METRICS_ENABLED=true
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ALERTING_ENABLED=true

# Network Configuration
NETWORK_SECURITY_ENABLED=true
VPN_REQUIRED=false
IP_WHITELIST_ENABLED=false

# Integration Configuration
SIEM_INTEGRATION_ENABLED=true
SOAR_INTEGRATION_ENABLED=true
EDR_INTEGRATION_ENABLED=true
THREAT_INTEL_ENABLED=true

# German Legal Compliance
GDPR_COMPLIANCE=enabled
BSI_COMPLIANCE=enabled
IT_SIG_COMPLIANCE=enabled
DATA_LOCALIZATION=germany
PRIVACY_BY_DESIGN=enabled

# Performance Monitoring
APM_ENABLED=true
TRACING_ENABLED=true
PROFILING_ENABLED=true
HEALTH_CHECKS_ENABLED=true

# Development/Testing (Disabled in Production)
TEST_MODE=false
MOCK_APIS=false
DEBUG_TOOLS=false
DEV_ENDPOINTS=false
