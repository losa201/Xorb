# XORB Ecosystem - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===========================================
# API Keys & Authentication
# ===========================================

# NVIDIA API Key for GPU acceleration and AI services
# Get from: https://build.nvidia.com/
NVIDIA_API_KEY=your_nvidia_api_key_here

# OpenRouter API Key for LLM services  
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Other AI Service Keys (if used)
CEREBRAS_API_KEY=your_cerebras_key_here
KIMI_API_KEY=your_kimi_key_here

# ===========================================
# Database Configuration
# ===========================================

# PostgreSQL
POSTGRES_USER=xorb_user
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_DB=xorb_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_PASSWORD=your_secure_redis_password
REDIS_HOST=localhost
REDIS_PORT=6379

# Neo4j
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_neo4j_password
NEO4J_URI=bolt://localhost:7687

# ClickHouse
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your_secure_clickhouse_password
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123

# ===========================================
# Service Configuration
# ===========================================

# XORB API Configuration
XORB_API_HOST=0.0.0.0
XORB_API_PORT=8080
XORB_API_SECRET_KEY=your_secret_key_for_jwt_signing

# Orchestrator Configuration
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_PORT=8000
MAX_CONCURRENT_AGENTS=32

# Worker Configuration
WORKER_POOL_SIZE=16
WORKER_TIMEOUT=300

# ===========================================
# Security & Performance Settings
# ===========================================

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# EPYC Optimization
CPU_CORES=64
MAX_MEMORY_GB=512
NUMA_NODES=2

# Environment Type
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO